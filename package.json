{
  "name": "game-arcade-2026",
  "version": "1.0.0",
  "description": "Next-generation web-based gaming platform with React 19, Three.js, and real-time multiplayer",
  "author": "Game Arcade Team",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev:start",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules && npm run install:all",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm run test",
    "test:backend": "cd backend && npm run test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": [
    "gaming",
    "arcade",
    "react",
    "typescript",
    "threejs",
    "nestjs",
    "mongodb",
    "websocket",
    "multiplayer",
    "webgl"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/game-arcade-2026.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/game-arcade-2026/issues"
  },
  "homepage": "https://game-arcade-2026.vercel.app"
}